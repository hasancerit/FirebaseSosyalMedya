<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/kayitİsim"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:drawableLeft="@drawable/man"
            android:drawablePadding="9dp"
            android:ems="10"
            android:fontFamily="@font/comfortaa_bold"
            android:hint="İsim"
            android:inputType="textPersonName"
            android:textColor="@android:color/white"
            android:textColorHint="@color/loginTextColor"
            android:textSize="23sp" />

        <EditText
            android:id="@+id/kayitSoyisim"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:ems="10"
            android:fontFamily="@font/comfortaa_bold"
            android:hint="Soyisim"
            android:inputType="textPersonName"
            android:textColor="@android:color/white"
            android:textColorHint="@color/loginTextColor"
            android:textSize="23sp" />

    </LinearLayout>

    <EditText
        android:id="@+id/emailkayit"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/mail3"
        android:drawablePadding="9dp"
        android:ems="10"
        android:fontFamily="@font/comfortaa_bold"
        android:hint="E-Mail"
        android:inputType="textPersonName"
        android:textColor="@android:color/white"
        android:textColorHint="@color/loginTextColor"
        android:textSize="23sp" />

    <EditText
        android:id="@+id/sifrekayit"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/paskey"
        android:drawablePadding="10dp"
        android:ems="10"
        android:fontFamily="@font/comfortaa_bold"
        android:hint="Şifre"
        android:inputType="textPassword"
        android:textColor="@android:color/white"
        android:textColorHint="@color/loginTextColor"
        android:textSize="23sp" />

    <EditText
        android:id="@+id/editText62"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/tekrar"
        android:drawablePadding="10dp"
        android:ems="10"
        android:fontFamily="@font/comfortaa_bold"
        android:hint="Şifreyi Tekrar Girin"
        android:inputType="textPassword"
        android:textColor="@android:color/white"
        android:textColorHint="@color/loginTextColor"
        android:textSize="23sp" />

    <EditText
        android:id="@+id/dateText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/dateiconn"
        android:drawablePadding="7dp"
        android:fontFamily="@font/comfortaa_bold"
        android:hint="GG/AA/YYYY"
        android:inputType="date"
        android:textColor="@android:color/white"
        android:textColorHint="@color/loginTextColor"
        android:textSize="23sp" />

    <Button
        android:id="@+id/kayıtOnayButon"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/login_button"
        android:fontFamily="@font/comfortaa_bold"
        android:text="Kayıt Ol"
        android:textColor="@color/loginGirisColor"
        android:textSize="16sp" />

    <Button
        android:id="@+id/giriseDön"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/comfortaa_light"
        android:onClick="üyeOlButtonAction"
        android:text="Giriş Yap"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />
</LinearLayout>
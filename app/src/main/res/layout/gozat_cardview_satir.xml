<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="65dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:fontFamily="@font/bair"
            android:id="@+id/aciklamaGozAt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text="ACIKLAMA" />

        <com.example.hasan.myapplication.Utils.SquareImageView
            android:id="@+id/imageGozAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <com.example.hasan.myapplication.Utils.SquareVideoView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/videoGozAt"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"/>
        </FrameLayout>


        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:gravity="right">

            <TextView
                android:id="@+id/userGozat"
                android:textSize="11dp"
                android:layout_marginRight="7dp"
                android:fontFamily="@font/baimi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Hasan Cerit" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>